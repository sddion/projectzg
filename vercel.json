{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app.cjs": {
      "runtime": "nodejs@18.x",
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "dist/**",
      "excludeFiles": "node_modules/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
